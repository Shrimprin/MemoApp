<div class="">
  <h2><%= CGI.escapeHTML(@memo['title']) %></h2>
  <pre><%= CGI.escapeHTML(@memo['content']) %></pre>
</div>

<div class="d-flex mb-3">
  <form action="/memos/<%= @memo['id'] %>/edit" method="get">
    <input type="submit" value="編集" class="btn btn-primary me-2">
  </form>
  <form action="/memos/<%= @memo['id'] %>" method="post" onsubmit="return confirm('本当に削除しますか？');">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="削除" class="btn btn-danger">
  </form>
</div>

<div>
  <a class="btn btn-secondary" href="/memos">メモ一覧に戻る</a>
</div>
